<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivitya"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#e7dfd8">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/aIV3"
        android:background="@drawable/clockbackground"
        ></ImageView>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="240sp"
        android:background="@drawable/blackboard"
        >
        <TextView
            android:id="@+id/atestv"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            ></TextView>

        <TextView
            android:id="@+id/aTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:textColor="@color/white"
            android:textSize="50sp"></TextView>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Ta1"></TextView>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="音調"
        ></TextView>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:background="@drawable/desk"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="200dp"></ImageView>
        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            >
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/pad"/>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/aIV2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="24dp"
                >
            </pl.droidsonroids.gif.GifImageView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="60dp"
                android:layout_marginRight="8dp"
                android:text="再錄一次"
                android:textColor="@color/black"
                app:backgroundTint="@color/buttonyellow"
                android:visibility="invisible"
                android:id="@+id/aBT3">
            </Button>
        </FrameLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_gravity="left|bottom"
            android:text="上一題"
            android:id="@+id/aBT1"
            android:visibility="invisible"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_gravity="right|bottom"
            android:text="下一題"
            android:id="@+id/aBT2"
            />
    </FrameLayout>


</LinearLayout>