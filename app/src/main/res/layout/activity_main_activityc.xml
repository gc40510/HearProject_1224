<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/score_bg"
    android:gravity="center">

    <!-- 錄音控制區 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btn_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFD700"
            android:text="錄製發音"
            android:textColor="#000000"
            android:layout_margin="8dp"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFD700"
            android:text="停止錄製"
            android:textColor="#000000"
            android:layout_margin="8dp"
            android:padding="8dp"/>
        <Button
            android:id="@+id/btnTestPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="測試連線"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- 第一張 Pitch Contour 圖片 -->
    <ImageView
        android:id="@+id/img_pitch_contour"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="24dp"/>

    <!-- 發音結果 -->
    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="發音清晰度：N/A"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/txt_result2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="錄製的音調:  ㄅㄚ (第一聲)"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- 儲存與比較按鈕 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4682B4"
            android:text="儲存結果"
            android:textColor="#FFFFFF"
            android:layout_margin="8dp"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btn_compare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#32CD32"
            android:text="比較前後發音"
            android:textColor="#FFFFFF"
            android:layout_margin="8dp"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- 第二張 Pitch Contour 圖片 -->
    <ImageView
        android:id="@+id/img_pitch_contour2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:background="@android:color/darker_gray"/>
</LinearLayout>
