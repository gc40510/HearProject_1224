<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivitya"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#e7dfd8">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/aIV3"
        android:background="@drawable/clockbackground"/>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="240sp"
        android:background="@drawable/blackboard">

        <TextView
            android:id="@+id/atestv"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="20sp"/>


        <ImageView
            android:id="@+id/aIV1"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"/>

        <RadioGroup
            android:id="@+id/soundbtngroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="115dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原始聲音"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:id="@+id/radio_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="個人化調整"
                android:textColor="#FFFFFF" />

        </RadioGroup>


        <TextView
            android:id="@+id/aTV1"
            android:layout_width="wrap_content"
            android:layout_height="160sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:textColor="@color/white"
            android:textSize="50sp"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="音調圖" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bbb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Ta1"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:background="@drawable/desk"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="200dp"/>
        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal">
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/img_pad"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/aIV2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="24dp"/>
<!--            </pl.droidsonroids.gif.GifImageView>-->

            <Button
                android:id="@+id/aBT3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="60dp"
                android:stateListAnimator="@null"
                android:text="再錄一次"
                android:textColor="@color/black"
                android:visibility="invisible"
                app:backgroundTint="@color/buttonyellow"/>

            <Button
                android:id="@+id/repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="60dp"
                android:visibility="invisible"
                android:textColor="@color/black"
                app:backgroundTint="@color/buttonyellow"
                android:text="repeat" />

            <Button
                android:id="@+id/show_mouth_tech_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="140dp"
                android:text="發音技巧"
                android:textColor="@color/black"
                android:visibility="invisible"
                app:backgroundTint="@color/buttonyellow" />

        </FrameLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_gravity="left|bottom"
            android:text="上一題"
            android:id="@+id/aBT1"
            android:visibility="invisible" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_gravity="right|bottom"
            android:text="下一題"
            android:id="@+id/aBT2" />

        <Button
            android:id="@+id/show_result_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="140dp"
            android:text="顯示結果"
            android:textColor="@color/black"
            android:visibility="invisible"
            app:backgroundTint="@color/buttonyellow" />

    </FrameLayout>


</LinearLayout>